<style>

  /*====
  Animation 
  ======*/

  @keyframes floatyness {
    50%  { 
      transform: translate3d(0, -10px, 0);
      animation-timing-function: ease-in-out;
    }
    0%, 100% { /* Same starting and ending properties. */
      transform: translate3d(0, 0, 0);
      animation-timing-function: ease-in-out; 
    }
  }

  @keyframes floatyness2 {
    50%  { 
      transform: translate3d(0, 10px, 0);
      animation-timing-function: ease-in-out;
    }
    0%, 100% { 
      transform: translate3d(0, 0, 0);
      animation-timing-function: ease-in-out; 
    }
  }

  @keyframes laserfire {
    0% {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
    59% {
      opacity: 1;
    }
    61% {
      opacity: 0;
    }
    62% {
      opacity: 1;
    }
    63% {
      opacity: 0;
    }
    64% {
      opacity: 1;
    }
    65% {
      opacity: 0;
    }
    66% {
      opacity: 1;
    }
    67% {
      opacity: 0;
    }
    68% {
      opacity: 1;
    }
    69% {
      opacity: 0;
    }
    70% {
      opacity: 1;
      transform: translate3d(0, -10px, 0);
    }
  }



  .center-banner {
    position: relative;
    height: 0;
    padding-bottom: 400px;
    margin-bottom: 32px;

    background-color: #6d8ec9;
  }

  @media only screen and (min-width: 300px) {
    .center-banner {
      padding-bottom: 600px;
    }
  }

  @media only screen and (min-width: 500px) {
    .center-banner {
      padding-bottom: 800px;
    }
  }

  /*======================================
    Sir, what the fuck are we looking at?
    Some kind of, ANOMALY!
  =======================================*/

  /* THE */ .anomaly {
    position: absolute;
      top: 0;
      left: 0;
    width: 100%;
    height: 100%;
    margin: 0 auto;
    z-index: 200;
    overflow: hidden;

    display: flex;
    justify-content: center;
  }

  @media only screen and (min-width: 500px) {
    .anomaly {
      padding-top: 50px;
    }
  }

  .anomaly__parts {
    height: 100%;
    width: 100%;
    position: relative;
    transition: 0.2s ease-in-out all;
    transform: scale(0.5);
    min-width: 440px;
  }

  @media only screen and (min-width: 300px) {
    .anomaly__parts {
      transform: scale(0.6);
    }
  }

  @media only screen and (min-width: 500px) {
    .anomaly__parts {
      transform: scale(0.8);
    }
  }

  @media only screen and (min-width: 654px) {
    .anomaly__parts {
      width: 80%;
      transform: scale(1.0);
    }
  }

  @media only screen and (min-width: 1024px) {
    .anomaly__parts {
      width: 50%;
    }
  }

  .anomaly__parts div { /* All parts of the anomaly. */
    position: absolute;
  }

  .anomaly__parts img {
    background: transparent;
  }


  /*====
  The Pieces
  ======*/

  .anomaly__yellow-ball {
    top: 343px;
    left: 548px;

    width: 25px;
    height: 28px;

    z-index: 100;

    animation: floatyness 2s infinite;
  }
  .anomaly__green-ball {
    top: 423px;
    left: 420px;

    z-index: 181; /* In front of the top chunk */
    animation: floatyness2 2.5s infinite;
  }
  .anomaly__anchor {
    top: 608px;
    left: 371px;

    z-index: 191; /* In front of the bottom chunk */
    animation: floatyness2 4s infinite;
  }
  .anomaly__chocolate-drop {
    filter: blur(3px);

    top: 313px;
    left: 420px;

    z-index: 179; /* behind the top chunk. */
    animation: floatyness 7s infinite;
  }
  .anomaly__boat {
    filter: blur(2px);

    top: 190px;
    left: -24px;

    z-index: 183; /* In front of the licorice swoosh */
    animation: floatyness2 7.5s infinite;
  }
  .anomaly__licorice-swoosh {
    filter: blur(1px);

    top: 145px;
    left: 53px;

    z-index: 1082; /* Above the the top chunk but behind the bottom chunk. */
    animation: floatyness2 4.5s infinite;
  }
  .anomaly__crown {
    filter: blur(1px);

    top: 220px;
    left: 378px;
    
    z-index: 181; /* In front of the top chunk */
    animation: floatyness2 4s infinite;
  }
  .anomaly__laser-beam {
    filter: blur(1px);
    top: -134px;
    left: 350px;

    width: 356px;
    height: 256px;

    z-index: 179; /* Behind the top chunk */
    animation: laserfire 8s infinite;
  }
  .anomoly__rock-tunnel {
    top: 240px;
    left: 211px;

    z-index: 200; /* Top of everything */
    animation: floatyness 8s infinite;
  }
  .anomaly__top-chunk {
    filter: blur(1px);

    left: 128px;
    top: 18px;

    width: 376px;
    height: 453px;

    z-index: 180; /* Behind the rock tunnel and the top chunk */
    animation: floatyness 8s infinite;
  }
  .anomaly__bottom-chunk {
    left: 15px;
    top: 183px;

    width: 514px;
    height: 481px;

    z-index: 190; /* Behind the rock tunnel but above the top chunk */
    animation: floatyness 6s infinite;
  }

</style>

