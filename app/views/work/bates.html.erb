<%= render 'shared/work_before' %>


      <header class="c-work-single__header u-spacers">
        <div class="u-space-md">
          <span class="c-article__page-topper">Bates Saddles</span>
        </div>
        <div class="u-space-stack-lg">
          <ul class="c-tag-list">
            <li class="c-tag-list__tag">Wordpress</li>
            <li class="c-tag-list__tag">Frontend</li>
          </ul>
          <h1 class="c-work-single__title">The Most Saddle Patents Globally.</h1>
