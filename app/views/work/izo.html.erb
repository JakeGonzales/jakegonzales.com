<% content_for :body_class, "work-single " %>
<% content_for :title, "" %>
<% content_for :description, "" %>

<%= render 'shared/work_before' %>


      <header class="c-work-single__header u-spacers">
        <div class="u-space-md">
          <span class="c-article__page-topper">IZO Photography</span>
        </div>
        <div class="u-space-stack-lg">
          <h1 class="c-work-single__title">Photographer of the Year.</h1>
          <section class="c-work-single__description">
            <p>Jimmy and Shona are multi award winning photographers with a focus on wedding photography. They wanted a site that was memorable and stood out from the sea of white cookie cutter photography They also wanted to attract couples who are on trend.</p>
            <a class="c-article__link-alone" href="http://izo.com.au" title="IZO Photography Website.">izo.com.au</a>
          </section>
        </div>

        <div class="u-space-md">
          <div style="--aspect-ratio:1600/940;" class="u-image-loader">
            <%= image_tag("work/izo-photography/izo-photography__web-banner.jpg", alt: "") %>
          </div>
        </div>
      </header>


      <main class="c-work-single__main u-spacers">

        <div class="u-space-md">
          <aside class="c-article__colophon">
            <h1>Credits</h1>
            <p>My primary role on this project was building out the backend of the theme in Wordpress and helping with the more complicated frontend challenges like the hexagonal thumbnails and the menu functionality.</p>
            <ul>
              <li>Adam Gormley: Site designs including mobile, and tablet layouts; all badges and type treatments; logo; frontend development: CSS/Layouts.</li>
            </ul>
          </aside>
        </div>

        <div class="o-l__g-fluid">
          <div class="u-space"><div style="--aspect-ratio:800/470;" class="u-image-loader">
            <%= image_tag("work/izo-photography/izo-photography__web-about-800x470.jpg", alt: "") %>
          </div></div>
          <div class="u-space"><div style="--aspect-ratio:800/470;" class="u-image-loader">
            <%= image_tag("work/izo-photography/izo-photography__web-menu-800x470.jpg", alt: "") %>
          </div></div>
        </div>

        <div class="u-space-md"><div style="--aspect-ratio:1600/940;" class="u-image-loader">
          <%= image_tag("work/izo-photography/izo-photography__web-latest.jpg", alt: "") %>
        </div></div>
        <div class="u-space-md"><div style="--aspect-ratio:1600/940;" class="u-image-loader">
          <%= image_tag("work/izo-photography/izo-photography__web-overview.jpg", alt: "") %>
        </div></div>

      </main>


<%= render 'shared/work_after' %>