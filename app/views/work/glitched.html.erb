<% content_for :body_class, "work-single " %>
<% content_for :title, "" %>
<% content_for :description, "" %>

<%= render 'shared/work_before' %>


      <header class="c-work-single__header u-spacers">
        <div class="u-space-md">
          <span class="c-article__page-topper">Two Of Three</span>
        </div>
        <div class="u-space-stack-lg">
          <h1 class="c-work-single__title">Glitched Horror Animation</h1>
          <section class="c-work-single__description">
            <p>Cras mattis consectetur purus sit amet fermentum. Morbi leo risus, porta ac consectetur ac, vestibulum at eros. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis mollis, est non commodo luctus, nisi erat porttitor ligula.</p>
          </section>
        </div>
      </header>


      <main class="c-work-single__main u-spacers">

        <div class="u-space">
          <div class="gawy gawy__background">

            <h1 class="gawy__title">Graphics and Websites yo!</h1>

            <div class="gawy__image">

              <div class="gawy__text">
                <div class="gawy__text-ratio">
                  <span class="gawy__text-title"></span>
                  <span class="gawy__text-outlines"></span>
                  <span class="gawy__text-outlines-2"></span>
                  <span class="gawy__text-dropshadow"></span>
                </div>
              </div>


              <div class="gawy__image-computer">
                <div class="gawy__image-computer-ratio">
                  <%= image_tag("work/graphics-websites-yo/1973-BMT-100@2x.png", alt: "", class: "gawy__image-computer-screen") %>
                  <span class="gawy__image-computer-glow"></span>
                  <span class="gawy__image-computer-glow--static"></span>
                </div>
              </div>


            </div>

          </div>
        </div>

      </main>


<%= render 'shared/work_after' %>